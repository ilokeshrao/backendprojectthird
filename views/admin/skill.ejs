<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/admin/css/style.css">
</head>
<body>

    <%- include('../../partials/admin/header.ejs')%>
<section id="mid">
    <div class="container">
        <div class="row">
            <%- include('../../partials/admin/left.ejs')%>
            <div class="col-md-9">
                <h2>Skill Management</h2>
               <table class="table table-hover">  
                <tr>
                    <th colspan="6"> <h4 class="text-center">Skill Dashboard</h4></th>
                </tr>
                <tr>
                    <td>Total Skill:<%=tskill%></td>
                    <td>Total Publish:<%=tpublished%></td>
                    <td>Total Unpublish:<%=tunpublished%></td>
                </tr>
               </table>
              <h4> Search By Status</h4>
              <form action="" method="post">
                <label for=""> Select Status</label>
                <select name="search" id="" class="form-select">
                    <option value="">select one status</option>
                    <option value="Unpublished"> Unpublished</option>
                    <option value="Publish">Published</option>
                </select>
                <button class=" btn btn-warning form-control mt-3 mb-4"> Search</button>
            </form>
            
               <a href="/admin/addskill"><button class=" btn btn-dark form-control"> Add Skills</button></a> 
                <table class="table table-hover">
                    <tr>
                        <th>S.No</th>
                        <th>Skill Name </th>
                        <th> Skill Desc</th>
                        <th> Skill Strength</th>
                        <th> Skill Status</th>
                        <th>Skill Delete</th>
                    </tr>
                    <%record.forEach((result,key)=>{%>
                        <tr>
                            <td><%=key+1%></td>
                            <td><%=result.skill%></td>
                            <td><%=result.desc%></td>
                            <td><%=result.strength%></td>
                            <%if(result.status=='Publish'){%>
                                <td>  <a href="/admin/skillstatusupdate/<%=result.id%>"><button style="width: 110px;" class="btn btn-success"><%=result.status%></button></a></td>
                             <%}else{%>
                                <td>  <a href="/admin/skillstatusupdate/<%=result.id%>"><button style="width: 110px;" class="btn btn-warning"><%=result.status%></button></a></td>
                            <%}%>
                            <td> <a href="/admin/skilldelete/<%=result.id%>"><i class="bi bi-trash"></i></a></td>
                        </tr>
                   <%})%>
                   <%if(record.length==0){%>
                <tr>
                    <td colspan="7" class="text-center" ><h2 class="text-center btn btn-dark ">No Record Found</h2> </td>
                </tr>
                   <% }%>
                </table>
            </div>
        </div>
    </div>
</section>

<%- include('../../partials/admin/footer.ejs')%>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>