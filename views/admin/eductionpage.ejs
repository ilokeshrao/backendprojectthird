<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/admin/css/style.css">
</head>
<body>

    <%- include('../../partials/admin/header.ejs')%>
<section id="mid">
    <div class="container">
        <div class="row">
            <%- include('../../partials/admin/left.ejs')%>
            <div class="col-md-9">
                <h2>Eduction Management</h2>
                <table class="table table-hover">
                    <tr>
                        <th colspan="7"> <h4 class="text-center"> Dashboard</h4></th>
                    </tr>
                    <tr>
                        <td>Total Eduction:<%=teduction%></td>
                        <td>Total Publish:<%=tpublish%></td>
                        <td> Total Unpublish<%=tunpublish%></td>
                    </tr>
                </table>
                <h4>Search By Course</h4>
                <form action="" method="post">
                    <label for="">Select Status</label>
                    <select name="search" id="" class="form-select">
                        <option value="">Select One Status</option>
                        <option value="Published">Published</option>
                        <option value="Unpublished">Unpublished</option>
                    </select>
                    <button type="submit" class="btn btn-warning mt-3 mb-4 form-control"> Search</button>
                </form>
                <a href="/admin/courseadd"><button class="btn btn-dark text-center form-control">Add Course Here!!!</button></a>
                <table class="table table-hover">
                    <tr>
                        <th>S.No</th>
                        <th>Course Name</th>
                        <th>Course Desc</th>
                        <th>Course Start</th>
                        <th>Course End</th>
                        <th>Course Status</th>
                        <th>Course Delete</th>
                    </tr>
                    <%record.forEach((result,key)=>{%>
                        <tr>
                            <td><%=key+1%></td>
                            <td><%=result.name%></td>
                            <td><%=result.desc%></td>
                            <td><%=result.start%></td>
                            <td><%=result.end%></td>
                            <%if(result.status=='Published'){%>
                                <td><a href="/admin/eductionstatusupdate/<%=result.id%>"><button style="width: 110px;" class="btn btn-success"><%=result.status%></button></a></td>
                           <%}else{%>
                            <td><a href="/admin/eductionstatusupdate/<%=result.id%>"><button style="width: 110px;" class="btn btn-warning"><%=result.status%></button></a></td>
                           <%}%>
                            <td><a href="/admin/deletecourtse/<%=result.id%>"><i class="bi bi-trash"></i></a></td>
                        </tr>
                    <%})%>
                    <%if(record.length==0){%>
                        <tr>
                            <td colspan="7" class="text-center" ><h2 class="text-center btn btn-dark ">No Record Found</h2> </td>
                        </tr>
                    <%}%>
                </table>
            </div>
        </div>
    </div>
</section>

<%- include('../../partials/admin/footer.ejs')%>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>