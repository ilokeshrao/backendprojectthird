<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/admin/css/style.css">
</head>
<body>

    <%- include('../../partials/admin/header.ejs')%>
<section id="mid">
    <div class="container">
        <div class="row">
            <%- include('../../partials/admin/left.ejs')%>
            <div class="col-md-9">
                <h2>Query Management</h2>
                <table class="table table-hover">
                    <tr>
                        <th>S.No</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Message</th>
                        <th>Status</th>
                        <th>Delete</th>
                    </tr>
                    <%record.forEach((result,key)=>{%>
                        <tr>
                            <td><%=key+1%></td>
                            <td><%=result.name%></td>
                            <td><%=result.email%></td>
                            <td><%=result.query%></td>
                            <%if(result.status=='Replied'){%>
                                <td><a href="/admin/queryreply/<%=result.id%>"><button disabled class="btn btn-success"><%=result.status%></button></a></td>  
                            <%}else{%>
                                <td><a href="/admin/queryreply/<%=result.id%>"><button class="btn btn-warning"><%=result.status%></button></a></td>  
                             <%}%>
                             <td><a href="/admin/deleteemail/<%=result.id%>"><i class="bi bi-trash"></i></a></td>
                        </tr>
                   <%})%>
                </table>
            </div>
        </div>
    </div>
</section>

<%- include('../../partials/admin/footer.ejs')%>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>